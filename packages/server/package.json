{
  "name": "react-drums-api",
  "version": "0.0.1",
  "description": "API to store and capture user account and sound bank data.",
  "main": "src/index.ts",
  "repository": "https://github.com/mannuelf/react-drums",
  "author": "Mannuel Ferreira",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm codegen && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "start": "nodemon -e ts, graphql -x ts-node -r dotenv/config src/index.ts",
    "studio": "prisma studio",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "apollo-server": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript-document-nodes": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
