{
  "name": "react-drums-api",
  "version": "0.0.1",
  "description": "API to store and capture user account and sound bank data.",
  "main": "src/index.ts",
  "repository": "https://github.com/mannuelf/react-drums",
  "author": "Mannuel Ferreira",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/",
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "build": "rm -rf dist && graphql codegen && tsc",
    "generate": "yarn -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "npx prisma migrate dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "@types/node": "^17.0.23",
    "apollo-server": "^3.4.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.3.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.4",
    "prisma": "^3.2.1",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "type": "module",
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
