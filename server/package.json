{
  "name": "react-drums-api",
  "version": "0.0.1",
  "description": "API to store and capture user account and sound bank data.",
  "main": "src/index.ts",
  "repository": "https://github.com/mannuelf/react-drums",
  "author": "Mannuel Ferreira",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "build": "rm -rf dist && graphql codegen && tsc",
    "generate": "yarn -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "npx prisma migrate dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "apollo-server": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "type": "module",
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
