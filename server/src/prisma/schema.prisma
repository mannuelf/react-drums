datasource db {
        provider = "postgresql"
        url      = "postgres://root:root@192.168.64.12:30433/reactdrumsdb?schema=public"
}

generator client {
        provider = "prisma-client-js"
}

model user {
        id        Int      @id @default(autoincrement())
        firstName String
        lastName  String
        email     String   @unique
        password  String
        createdAt DateTime @default(now())
        updatedAt DateTime @updatedAt
}

model kit {
        id   Int    @id @default(autoincrement())
        name String
}

model sound {
        id      Int    @id @default(autoincrement())
        name    String
        src     String
        keyCode Int
        keyChar String
}
